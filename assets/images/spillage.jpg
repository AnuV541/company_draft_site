<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 400" width="600" height="400">
  <defs>
    <linearGradient id="grad4" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#16a085;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1e8449;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="600" height="400" fill="url(#grad4)"/>
  
  <!-- Spillage containment container -->
  <g transform="translate(100, 60)">
    <!-- Main container -->
    <rect x="0" y="40" width="300" height="200" fill="#34495e" stroke="#2c3e50" stroke-width="4"/>
    <path d="M 0 40 Q 150 0 300 40" fill="#2c3e50"/>
    
    <!-- Liquid inside -->
    <rect x="10" y="100" width="280" height="130" fill="#f39c12" opacity="0.7" rx="2"/>
    
    <!-- Warning symbol -->
    <circle cx="150" cy="140" r="40" fill="#e74c3c" opacity="0.8"/>
    <text x="150" y="150" font-size="48" text-anchor="middle" fill="#fff">⚠</text>
    
    <!-- Foam/Absorbent -->
    <ellipse cx="50" cy="95" rx="30" ry="15" fill="#95a5a6" opacity="0.6"/>
    <ellipse cx="150" cy="92" rx="35" ry="12" fill="#95a5a6" opacity="0.6"/>
    <ellipse cx="250" cy="95" rx="30" ry="15" fill="#95a5a6" opacity="0.6"/>
  </g>
  
  <!-- Environmental/Safety icons -->
  <g transform="translate(320, 120)">
    <!-- Shield -->
    <path d="M 50 20 L 100 40 L 100 120 Q 50 150 50 150 Q 50 150 0 120 L 0 40 Z" fill="none" stroke="#1abc9c" stroke-width="4"/>
    <text x="50" y="95" font-size="40" text-anchor="middle" fill="#1abc9c">✓</text>
  </g>
  
  <!-- Text -->
  <text x="300" y="300" font-size="36" font-weight="bold" fill="#fff" text-anchor="middle" font-family="Arial">
    Spillage Management
  </text>
  <text x="300" y="340" font-size="20" fill="#ecf0f1" text-anchor="middle" font-family="Arial">
    Environmental & Safety Solutions
  </text>
</svg>
