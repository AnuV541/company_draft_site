<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 400" width="600" height="400">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3498db;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2980b9;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="600" height="400" fill="url(#grad1)"/>
  
  <!-- SG Boring cylinder representation -->
  <g transform="translate(150, 80)">
    <!-- Outer circle (top view) -->
    <circle cx="150" cy="80" r="100" fill="#e74c3c" opacity="0.8"/>
    <circle cx="150" cy="80" r="90" fill="none" stroke="#c0392b" stroke-width="8"/>
    
    <!-- Inner circle -->
    <circle cx="150" cy="80" r="50" fill="#2c3e50" opacity="0.6"/>
    
    <!-- Highlight -->
    <ellipse cx="150" cy="50" rx="40" ry="15" fill="#fff" opacity="0.3"/>
  </g>
  
  <!-- Cylinder side view -->
  <g transform="translate(320, 100)">
    <rect x="0" y="0" width="120" height="150" fill="#e74c3c" opacity="0.7"/>
    <ellipse cx="60" cy="0" rx="60" ry="20" fill="#c0392b"/>
    <ellipse cx="60" cy="150" rx="60" ry="20" fill="#a93226"/>
    <rect x="0" y="10" width="120" height="130" fill="#e74c3c" opacity="0.5"/>
  </g>
  
  <!-- Text -->
  <text x="300" y="300" font-size="36" font-weight="bold" fill="#fff" text-anchor="middle" font-family="Arial">
    SG Borings
  </text>
  <text x="300" y="340" font-size="20" fill="#ecf0f1" text-anchor="middle" font-family="Arial">
    Precision Boring Materials
  </text>
</svg>
